{{#partial "contenido" }}
    <div class="table-responsive">
        <div class="center mb-3">
            <a class="btn btn-primary" href="/comunidades/crear">Crear Comunidad</a>
        </div>
        <h4>Que participo</h4>
        <table class="table table-striped table-hover">
            <tr>
                <th>Nombre</th>
                <th>Cant. Miembros</th>
                <th>Confiabilidad</th>
                <th>Irme</th>
            </tr>
            <tbody>
            {{#each misComunidades}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.cantMiembros}}</td>
                    <td>{{this.confiabilidad}}</td>
                    <td>
                        <a class="btn btn-secondary" href="/comunidades/{{this.id}}/eliminar/{{usuario_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <h4>Para unirme</h4>
        <table class="table table-striped table-hover">
            <tr>
                <th>Nombre</th>
                <th>Cant. Miembros</th>
                <th>Confiabilidad</th>
                <th>Unirme</th>
            </tr>
            <tbody>
            {{#each comunidades}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.cantMiembros}}</td>
                    <td>{{this.confiabilidad}}</td>
                    <td>
                        {{#if this.esAdmin rol}}
                        <p>es admin</p>
                        {{/if}}

                        <a class="btn btn-secondary" href="/comunidades/{{this.id}}/unirme/{{usuario_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <h4>Solicitudes pendientes</h4>
        <table class="table table-striped table-hover">
            <tr>
                <th>Nombre</th>
                <th>Cant. Miembros</th>
                <th>Confiabilidad</th>
                <th>Estado</th>
            </tr>
            <tbody>
            {{#each comunidadesPendientes}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.cantMiembros}}</td>
                    <td>{{this.confiabilidad}}</td>
                    <td>
                        Pendiente
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
{{/partial}}
{{> templates/base }}