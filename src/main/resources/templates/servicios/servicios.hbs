{{#partial "contenido" }}

    <div class="card mb-10" style="width: 18rem;">

        <div class="card-body">
            <h5 class="card-title">Establecimiento: {{establecimiento.leyenda}}</h5>
            <p class="card-text">Descripción del establecimiento.</p>
            <a href="/establecimientos/{{establecimiento.id}}/editar" class="btn btn-primary">Editar</a>
        </div>


    </div>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <tr>
              <th colspan="4">
                  Servicios Asociados
              </th>
            </tr>
            <tr>
                <th>Servicio</th>
                <th>Nombre</th>
                <th>Esta Activo</th>
                <th>Es de Elevación</th>
                <th>Editar Servicio</th>
            </tr>
            <tbody>
            {{#each servicios}}
                <tr>
                    <td>{{this.codigoServicio}}</td>
                    <td>{{this.nombre}}</td>
                    <td>{{this.estaActivo}}</td>
                    <td>{{this.esDeElevacion}}</td>
                    <td>
                        <a class="btn btn-secondary" href="/servicios/{{this.id}}/editar"><i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <div class="center">
            <a class="btn btn-primary" href="/servicios/{{establecimiento.id}}/crear">Agregar Servicio</a>
        </div>

    </div>
{{/partial}}
{{> templates/base }}